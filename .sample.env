# ********* DATABASE
DB_NAME=weather
DB_URL=                                  # mongodb connection string (no db name suffix)

# ********* BACKEND
BACKEND_DEV=true                          # dev=true (localhost), prod=false
BACKEND_URL=http://localhost:3001         # dev=http://localhost:3001 | prod=https://weather-backend-jsm8.onrender.com
BACKEND_PORT=3001                         # dev=3001 | prod=(omit/provider-managed)
BACKEND_ADMIN_ENABLED=true                # dev=true | prod=true
BACKEND_COOKIE_SECURE=false               # dev=false | prod=true
BACKEND_OWNER_EMAIL=                      # owner email for admin bootstrap
BACKEND_SESSION_SECRET=                   # strong random string

# ********* FRONTEND
FRONTEND_URL=http://localhost:3000        # dev=http://localhost:3000 | prod=https://snowcast.onrender.com
FRONTEND_SESSION_SECRET=                  # strong random string
FRONTEND_COOKIE_SECURE=true               # prod=true (ignored when BACKEND_DEV=true)
FRONTEND_COOKIE_SAMESITE=none             # prod=none (ignored when BACKEND_DEV=true)

# ********* AUTH
AUTH_ALLOW_NEW_USERS=false                # allow auto-creating basic users on login

# ********* CORS
CORS_FRONTEND_ORIGINS=http://localhost:3000,https://snowcast.onrender.com

# ********* EMAIL (BREVO)
BREVO_API_KEY=
BREVO_API_ENDPOINT_URL=https://api.brevo.com/v3/smtp/email
SMTP_FROM=

# ********* CLIENT API
CLIENT_API_SESSION_SECRET=
